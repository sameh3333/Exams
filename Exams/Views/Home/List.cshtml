@model List<TbExamDto>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/homepage/listexam.css" rel="stylesheet" />
}

<div class="container mt-5">
    <h2 class="text-center text-warning mb-4"><i class="fas fa-list-ul"></i> Available Exams</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-danger text-center fw-bold" role="alert">
            ❌ No exams available at the moment. Please check back later.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var exam in Model)
            {
                <div class="col">
                    <div class="card exam-card shadow-lg border-0 h-100">
                        <div class="card-body">
                            <h5 class="exam-title"><i class="fas fa-book-open"></i> @exam.Title</h5>
                            <p class="exam-description">@exam.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-center">
                            <a href="@Url.Action("StartExam", "Exam", new { examId = exam.Id })" class="btn start-exam-btn w-100">
                                <i class="fas fa-play"></i> Start Exam
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
