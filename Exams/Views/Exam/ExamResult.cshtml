@{
    ViewBag.Title = "Exam Result";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .result-container {
            max-width: 600px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            text-align: center;
        }

        .result-title {
            font-size: 2rem;
            font-weight: bold;
            color: #ffdd57;
        }

        .score-box {
            font-size: 2.5rem;
            font-weight: bold;
            color: white;
            padding: 15px;
            border-radius: 12px;
        }

        .pass {
            background: linear-gradient(135deg, #28a745, #218838);
        }

        .fail {
            background: linear-gradient(135deg, #ff512f, #dd2476);
        }

        .home-btn {
            font-size: 1.2rem;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            transition: 0.3s;
        }

        .home-btn:hover {
            transform: scale(1.1);
        }
    </style>
}

<div class="container mt-5">
    <div class="result-container mx-auto">
        <h2 class="result-title">📊 Exam Result: @ViewBag.ExamTitle</h2>

        <div class="score-box @(ViewBag.Score >= 50 ? "pass" : "fail")">
            🎯 Your Score: @ViewBag.Score%
        </div>

        <p class="mt-3">
            @if (ViewBag.Score >= 50)
            {
                <span class="text-success fw-bold">🎉 Congratulations! You passed the exam! 🎉</span>
            }
            else
            {
                <span class="text-danger fw-bold">❌ You didn't pass, but keep practicing! 🚀</span>
            }
        </p>

        <a href="@Url.Action("List", "Home")" class="btn btn-primary home-btn">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
