@model IEnumerable<BL.Dtos.TbResultDto>

@{
    ViewData["Title"] = "Exam Results";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4 bg-light">
        <h2 class="text-center text-primary mb-4">
            <i class="fas fa-chart-bar"></i> Exam Results Dashboard
        </h2>

        <!-- ✅ جدول النتائج -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Student Name</th>
                        <th>Exam ID</th>
                        <th>Score (%)</th>
                        <th>Date Taken</th>
                        <th>Status</th>
                        <th >Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.StudentName</td>
                                <td>@item.ExamId</td>
                                <td>
                                    <span class="fw-bold @(item.Score >= 50 ? "text-success" : "text-danger")">
                                        @item.Score %
                                    </span>
                                </td>
                                <td>@item.TakenDate?.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (item.Score >= 50)
                                    {
                                        <span class="badge bg-success">Passed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Failed</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-info" asp-controller="Result" asp-action="Details" asp-route-id="@item.Id">👁 Details</a>

                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No results found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- ✅ زر رجوع للوحة التحكم -->
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary px-4 py-2">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/42e5a6d8a4.js" crossorigin="anonymous"></script>






