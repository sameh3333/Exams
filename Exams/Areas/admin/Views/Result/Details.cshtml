@model BL.Dtos.TbResultDto
@{
    ViewData["Title"] = "Result Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Card Header -->
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="fas fa-user-graduate me-2"></i>Result Details</h3>
                    <a asp-controller="Result" asp-action="List" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>

                <!-- Card Body -->
                <div class="card-body bg-light">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Student Name</h6>
                            <p class="fs-5 fw-semibold">@Model.StudentName</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Score</h6>
                            <p class="fs-5 fw-semibold">
                                <span class="badge bg-success">@Model.Score</span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Taken Date</h6>
                            <p class="fs-6">@Model.TakenDate?.ToString("dddd, dd MMMM yyyy, HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Exam Id</h6>
                            <p class="fs-6 text-truncate" title="@Model.ExamId">@Model.ExamId</p>
                        </div>
                    </div>

                    
                </div>

                <!-- Card Footer -->
                <div class="card-footer text-muted text-center">
                    Result Record ID: <code>@Model.Id</code>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
