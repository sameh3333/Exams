@model List< BL.Dtos.TbExamDto>

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📘 Exams List</h4>
            <a asp-controller="CreateExam" asp-action="Create" class="btn btn-light btn-sm fw-bold">➕ Add New Exam</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 30%;">📌 Title</th>
                        <th style="width: 35%;">📝 Description</th>
                        <th style="width: 20%;">📅 Created Date</th>
                        <th style="width: 15%;" class="text-center">⚙️ Actions</th>  
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td class="align-middle">@exam.Title</td>
                                <td class="align-middle">@exam.Description</td>
                                <td class="align-middle">@exam.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center align-middle">
                                    <a asp-action="Edit" asp-route-id="@exam.Id"
                                       class="btn btn-sm btn-warning me-1">
                                        ✏️ Edit
                                    </a>



                                    <form asp-action="ToggleActive" asp-route-id="@exam.Id" method="post"
                                          style="display:inline"
                                          onsubmit="return confirm('Are you sure you want to change the status of this exam?');">
                                        <button type="submit" class="btn btn-sm @(exam.IsActive ? "btn-success" : "btn-secondary")">
                                            @(exam.IsActive ? "🟢 Active" : "🔴 Inactive")
                                        </button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
     
                        <tr>
                            <td colspan="4" class="text-center text-muted p-4">
                                🚫 No exams available
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {

            var messageType = "@TempData["MessageType"]";
            var messageText = "@TempData["MessageText"]";

            if(messageType) {
                let icon = "info";
                switch(messageType){
                    case "1": icon = "success"; break; // SaveSuccess
                    case "2": icon = "error"; break;   // SaveFailed
                    case "3": icon = "success"; break; // DeleteSuccess
                    case "4": icon = "error"; break;   // DeleteFailed
                }

                Swal.fire({
                    title: icon === "success" ? "Success!" : "Error!",
                    text: messageText || "",
                    icon: icon,
                    timer: 2500,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            }
        });
    </script>
}
