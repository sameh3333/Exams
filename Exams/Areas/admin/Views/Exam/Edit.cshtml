
@model TbExamDto

<div class="card">
    <div class="card-body">
        <h4 class="card-title"> Exam</h4>
        <p class="card-description"> Exam</p>
        <form class="forms-sample"
              asp-action="Save" asp-controller="Exam" method="post" enctype="multipart/form-data">

            <input asp-for="Id" type="hidden" />


            <div class="form-group">
                <label for="exampleInputName1"> Title Exam</label>
                <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder=" Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputName1"> Description Exam</label>
                <input asp-for="Description" type="text" class="form-control" id="exampleInputName1" placeholder=" Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

      

            <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2"> Save</button>
        </form>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}


