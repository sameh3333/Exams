@model List<TbChoiceDto>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary">Choices List</h3>
        



        <!-- ✅ أزرار Back و New Choice متناسقة بجانب بعض -->
        <div class="d-flex align-items-center gap-2">




<a class="btn btn-success"
   asp-controller="Choice"
   asp-action="Edit"
   asp-route-questionId="@ViewBag.QuestionId">
    <i class="fas fa-plus"></i> New Choice
</a>

        </div>
    </div>

    <!-- ✅ جدول الاختيارات -->
    <div class="table-responsive shadow-lg p-3 bg-light rounded">
        <table class="table table-hover" id="choiceTable">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Choice Text</th>
                    <th>Is Correct?</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var choice in Model)
                {


                     <input type="hidden" asp-for="@choice.QuestionId" />   <!-- مهم جداً -->
                    <tr class="align-middle">
                        <td>#</td>
                        <td>@choice.ChoiceText</td>
                        <td>
                            @if (choice.IsCorrect)
                            {
                                <span class="badge bg-success">✅ Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">❌ No</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-controller="Choice" asp-action="Edit"
                               asp-route-Id="@choice.Id"
                               asp-route-questionId="@choice.QuestionId"
                               class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>

                            <button class="btn btn-danger btn-sm delete-btn"
                                    data-id="@choice.Id"
                                    data-question-id="@choice.QuestionId">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <script>
        $(document).ready(function () {
            $('#choiceTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 25, 50],
                "language": {
                    "search": "🔍 Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "zeroRecords": "No choices found",
                    "info": "Showing _START_ to _END_ of _TOTAL_ choices",
                    "infoEmpty": "No choices available",
                    "infoFiltered": "(filtered from _MAX_ total choices)"
                }
            });

            // ✅ تأكيد الحذف باستخدام SweetAlert2
            $(document).on("click", ".btn-danger.delete-btn", function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var questionId = $(this).data('question-id');
                var deleteUrl = '@Url.Action("Delete", "Choice")' + '?id=' + id + '&questionId=' + questionId;

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = deleteUrl;
                    }
                });
            });

            // ✅ عرض رسالة TempData عند حفظ أو حذف اختيار
            var messageType = "@TempData["MessageType"]";
            if (messageType === "1") {
                Swal.fire("Success!", "The choice has been saved successfully.", "success");
            } else if (messageType === "2") {
                Swal.fire("Error!", "Failed to save the choice.", "error");
            } else if (messageType === "3") {
                Swal.fire("Deleted!", "The choice has been deleted.", "success");
            } else if (messageType === "4") {
                Swal.fire("Error!", "Failed to delete the choice.", "error");
            }
        });
    </script>
}
