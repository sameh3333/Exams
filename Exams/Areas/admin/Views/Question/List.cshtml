

 @model List<TbQuestionDto>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary">Exam Questions</h3>

        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-secondary"
               asp-controller="Exam"
               asp-action="List">
                <i class="fas fa-arrow-left"></i> Back
            </a>

            <!-- 🟢 زر إضافة سؤال جديد -->
            <a class="btn btn-success"
               asp-controller="Question"
               asp-action="Edit"
               asp-route-examId="@ViewBag.ExamId">
                <i class="fas fa-plus"></i> New Question
            </a>
        </div>
    </div>

    <div class="table-responsive shadow-lg p-3 bg-light rounded">
        <table class="table table-hover" id="questionTable">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Question</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                    <tr class="align-middle">
                        <td>#</td>
                        <td>@exam.QuestionText</td>
                        <td class="text-center">
                            <input type="hidden" asp-for="@exam.Id" />
                            <input type="hidden" asp-for="@exam.ExamId" />

                            <!-- 🟢 زر تعديل السؤال -->
                            <a asp-controller="Question" asp-action="Edit"
                               asp-route-Id="@exam.Id"
                               asp-route-examId="@exam.ExamId"
                               class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>

                            <!-- 🟢 زر إضافة الاختيارات -->
                            <a asp-controller="Choice" asp-action="List"
                               asp-route-questionId="@exam.Id"
                               class="btn btn-primary btn-sm">
                                <i class="fas fa-list"></i> Add Choices
                            </a>

                            <!-- 🔴 زر حذف السؤال -->
                            <button class="btn btn-danger btn-sm delete-btn"
                                    data-id="@exam.Id"
                                    data-exam-id="@exam.ExamId">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


  @section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <script>
        $(document).ready(function () {
            // ✅ تفعيل DataTables لتحسين تجربة المستخدم
            $('#questionTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 25, 50],
                "language": {
                    "search": "🔍 Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "zeroRecords": "No questions found",
                    "info": "Showing _START_ to _END_ of _TOTAL_ questions",
                    "infoEmpty": "No questions available",
                    "infoFiltered": "(filtered from _MAX_ total questions)"
                }
            });

            // 🛑 تأكيد الحذف باستخدام SweetAlert2
            $(document).on("click", ".btn-danger.delete-btn", function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var examId = $(this).data('exam-id');
                var deleteUrl = '@Url.Action("Delete", "Question")' + '?id=' + id + '&examId=' + examId;

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = deleteUrl;
                    }
                });
            });

            // ✅ عرض التنبيه بناءً على `TempData["MessageType"]`
            var messageType = "@TempData["MessageType"]";
            if (messageType === "1") {
                Swal.fire("Success!", "The question has been saved successfully.", "success");
            } else if (messageType === "2") {
                Swal.fire("Error!", "Failed to save the question.", "error");
            } else if (messageType === "3") {
                Swal.fire("Deleted!", "The question has been deleted.", "success");
            } else if (messageType === "4") {
                Swal.fire("Error!", "Failed to delete the question.", "error");
            }
        });
    </script>
}

